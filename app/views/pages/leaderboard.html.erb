<div class="row">
	<div class="col-6 push-3">
		<table class="table table-dark">
  		<thead>
    		<tr>
      		<th scope="col">#</th>
      		<th scope="col">Usuario</th>
      		<th scope="col">Sal/seg</th>
          <th scope="col">Sal/click</th>
      		<th scope="col">Sal</th>
    		</tr>
  		</thead>
  		<tbody>
  			<% @i = 1 %>
			<% @users.each do |user| %>
			<tr>
      		<th scope="row"><%= @i %>
      		<% if @i == 1 %>
      			<i class="fa fa-bookmark" style="color: gold" ></i>
      		<% elsif @i == 2 or @i == 3 or @i == 4%>
      				<i class="fa fa-bookmark" style="color: silver" ></i>
      		<% elsif @i == 5 or @i == 6 or @i == 7%>
      				<i class="fa fa-bookmark" style="color: #CD7F32" ></i>
      		<% end %>      				
      		</th>
      		<td><%= user.email %></td>
      		<td><%= user.salt_per_second %></td>
          <% if user.click_damage == nil or user.click_damage == 0 %>
            <td><%= 1 %></td>
          <% else %>
            <td><%= user.click_damage %></td>
          <% end %>
      		<td><h6><%= user.salt %></h6></td>
    		</tr>
			<% @i = @i + 1 %>
			<% end %>

  		</tbody>
		</table>
	</div>
</div>

